{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% block tituloseccion %}
        Inicio
    {% endblock %}
    {% block contenido %}
        <form action="{{path('usuario_inicio')}}" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h4 class="mb-3 font-weight-normal">Por favor, introduzca sus datos:</h4>
            <div class="container col-sm-3 offset-sm-1">
                <label for="inputNombre">Nombre</label>
                <input type="text" value="{{ last_username }}" name="nombre" id="inputNombre" class="form-control" required autofocus>
                <label for="inputPassword">Contraseña</label>
                <input type="password" name="contrasenia" id="inputPassword" class="form-control mb-4" required>

                <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

                <button class="btn btn-lg btn-primary" type="submit">
                    Enviar
                </button>
            </div>
        </form>

        <br>
        <a href="{{ path('menuPrincipal_index') }}">Volver al menú principal</a>
    {% endblock %}
{% endblock %}
